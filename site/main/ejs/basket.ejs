</head>
<body>
    <%-include('./static-templates/navbar.ejs') %>

    <div class="order-confirmation-area">
        <h1 class="order-confirmation-heading">Order Confirmation</h1>
        <div class="order-main"><!--Flex Row-->
            <div class="order"><!--Flex Column-->
                <h3>My Order</h3>
                <div class="order-display"><!--Flex Column-->
                    <div class="order-headers"><!--Flex Row-->
                        <p>Item</p>
                        <p>Qty</p>
                    </div>
                    <div class="order-items basket-container">
                        <p>Basket is empty</p>
                        <!-- <div class="order-item">
                            <div class="order-item-details">
                                <p class="item-name">Cappuccino</p>
                                <ul class="item-details">
                                    <li>Modifications,</li>
                                    <li>Price</li>
                                </ul>
                            </div>
                            <p class="order-item-qty">3</p>
                        </div> -->
                    </div>
                    <div class="order-sub-headers"><!--Flex Row-->
                        <p>Total</p>
                        <p class="total">Â£10.50</p>
                    </div>
                </div>
            </div>
            <div class="customer-form">
                <div class="form-stages">
                    <div class="stage current">
                        <p>1</p>
                    </div>
                    <div class="stage">
                        <p>2</p>
                    </div>
                    <div class="stage">
                        <p>3</p>
                    </div>
                </div>
                <div class="details-entry-main">
                    <div class="detail-entry">
                        <div class="stage current">
                            <div class="did-floating-label-content">
                                <input class="did-floating-input" type="text" placeholder=" " name="firstName">
                                <label class="did-floating-label">First name</label>
                            </div>
                            <div class="did-floating-label-content">
                                <input class="did-floating-input" type="text" placeholder=" " name="lastName">
                                <label class="did-floating-label">Last name</label>
                            </div>
                            <div class="did-floating-label-content">
                                <input class="did-floating-input" type="email" placeholder=" " name="email">
                                <label class="did-floating-label">Email</label>
                            </div>
                            <div class="did-floating-label-content">
                                <input class="did-floating-input" type="tel" placeholder=" " name="contactNumber">
                                <label class="did-floating-label">Contact number</label>
                            </div>
                        </div>
                        <div class="stage">
                            <div class="did-checkbox-content delivery-question">
                                <label class="did-checkbox-label">Is this order for delivery?</label>
                                <input class="did-checkbox-input" type="checkbox" name="isDelivery">
                            </div>
                            <section class="delivery">
                                <div class="did-floating-label-content">
                                    <input class="did-floating-input" type="text" placeholder=" " name="address1">
                                    <label class="did-floating-label">Address line 1</label>
                                </div>
                                <div class="did-floating-label-content">
                                    <input class="did-floating-input" type="text" placeholder=" " name="address2">
                                    <label class="did-floating-label">Address line 2</label>
                                </div>
                                <div class="did-floating-label-content">
                                    <input class="did-floating-input" type="text" placeholder=" " name="townCity">
                                    <label class="did-floating-label">Town/City</label>
                                </div>
                                <div class="did-floating-label-content">
                                    <input class="did-floating-input" type="text" placeholder=" " name="county">
                                    <label class="did-floating-label">County</label>
                                </div>
                                <div class="did-floating-label-content">
                                    <input class="did-floating-input" type="text" placeholder=" " name="postCode">
                                    <label class="did-floating-label">Post code</label>
                                </div>
                            </section>
                            <div class="did-dropdown-content" style="flex: 1 1 100%;">
                                <label class="did-dropdown-label">Please pick a store</label>
                                <select class="did-dropdown-input" name="store">
                                    <option>Bournemouth</option>
                                    <option>Poole</option>
                                    <option>Swanage</option>
                                </select>
                            </div>
                            <section class="no-delivery">
                                <div class="did-floating-label-content">
                                    <input class="did-floating-input" type="date" placeholder=" " name="visitDate">
                                    <label class="did-floating-label">Visit date</label>
                                </div>
                                <div class="did-floating-label-content">
                                    <input class="did-floating-input" type="number" placeholder=" " name="partySize">
                                    <label class="did-floating-label">Party size</label>
                                </div>
                            </section>
                        </div>
                        <div class="stage" style="align-content: space-between;">
                            <div class="customer-details-summary">

                            </div>
